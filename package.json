{
  "name": "etn-watchdog",
  "version": "1.0.0",
  "description": "AI security bot for Electroneum blockchain that detects suspicious transactions, wallet drainers, and rug-pull risks",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js --network electroneum",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network electroneum_testnet",
    "switch:mainnet": "node scripts/switch-network.js mainnet",
    "switch:testnet": "node scripts/switch-network.js testnet",
    "test:connection": "node scripts/test-connection.js"
  },
  "keywords": [
    "electroneum",
    "blockchain",
    "security",
    "ai",
    "defi"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "web3": "^4.2.2",
    "cors": "^2.8.5",
    "socket.io": "^4.7.2",
    "@openzeppelin/contracts": "^5.0.0",
    "langchain": "^0.0.167",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.18.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  }
} 